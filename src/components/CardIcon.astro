---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";


interface Props {
   imagePath: string;
   altText: string;
   title: string;
}

const { imagePath, altText, title } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/logos/*.{jpeg,jpg,png,gif,svg}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/logos/*.{jpeg,jpg,png,gif,svg}"`);
---

<li class="item">
    <Image src={images[imagePath]()} alt={`${title} icon`} class="icon" />
    <span class="text">{title}</span>
</li>

<style>

    .item {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
    }

    .icon {
        width: 24px;
        height: 24px;
        margin-right: 8px;
    }

    .text {
        font-size: 1rem;
        color: #555;
    }
</style>