---
import Email from "../assets/logos/email.svg";
import Linkedin from "../assets/logos/linkedin.svg";
import Github from "../assets/logos/github.svg";
import { Image } from "astro:assets";
---

<section id="contact" class="contact-section">
    <div class="contact-info">
        <h2>Contact Me</h2>
        <p>
            If you're interested in collaborating or have any questions, feel
            free to reach out!
        </p>
    </div>
    <ul class="contact-links">
        <li>
            <Image
                src={Linkedin}
                alt="LinkedIn Logo"
                width={40}
                height={40}
                class="logo"
            />
            <a
                href="https://www.linkedin.com/in/richardsimonb"
                target="_blank"
                rel="noopener noreferrer"
            >
                LinkedIn
            </a>
        </li>
        <li>
            <Image
                src={Github}
                alt="GitHub Logo"
                width={40}
                height={40}
                class="logo"
            />
            <a
                href="https://github.com/richardsimonb"
                target="_blank"
                rel="noopener noreferrer"
            >
                GitHub
            </a>
        </li>
        <li>
            <Image
                src={Email}
                alt="Email Logo"
                width={40}
                height={40}
                class="logo"
            />
            <a href="mailto:richardsimonb@gmail.com"> Email </a>
        </li>
    </ul>
</section>

<style>
    .contact-section {
        background-color: var(--primary-color);
        margin: 0;
        padding-top: 10%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-self: center;
        min-height: 50%;
        width: 100%;
    }
    h2 {
        margin-top: 0;
        margin-bottom: 0;
        padding: 1rem;
        color: white;
        font-size: 3rem;
        text-align: center;
    }
    p {
        color: white;
        font-size: 1.5rem;
        margin: 0 0;
        text-align: center;
    }
    .contact-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-left: 10%;
        margin-right: 10%;
    }

    .contact-links {
        list-style: none;
        padding: 0;
        margin: 1rem 0 0;
    }

    .contact-links li {
        display: flex;
        align-items: center;
        gap: 20px;
        margin: 0.5rem 0;
        margin-bottom: 20%;
    }

    .contact-links a {
        text-decoration: none;
        color: white;
        font-weight: bold;
        font-size: 1.5rem;
    }

    .contact-links a:hover {
        color: var(--light-color);
    }

    @media screen and (min-width: 992px) {
        .contact-links{
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap: 30%;

        }
        
    }
</style>
