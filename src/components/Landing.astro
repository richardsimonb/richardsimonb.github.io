---
import "../styles/animation.css";
---

<section class="container">
    <svg viewBox="0 0 320 430" xmlns="http://www.w3.org/2000/svg">
        <g>
            <rect width="100" height="100" x="0" y="0" rx="20" ry="20"></rect>
            <rect width="100" height="100" x="110" y="0" rx="20" ry="20"></rect>
            <rect width="100" height="100" x="0" y="110" rx="20" ry="20"></rect>
            <rect width="100" height="100" x="0" y="220" rx="20" ry="20"></rect>
            <rect width="100" height="100" x="110" y="220" rx="20" ry="20"
            ></rect>
            <rect width="100" height="100" x="220" y="110" rx="20" ry="20"
            ></rect>
            <rect width="100" height="100" x="0" y="330" rx="20" ry="20"></rect>
            <rect width="100" height="100" x="220" y="330" rx="20" ry="20"
            ></rect>
        </g>
    </svg>
    <div class="text">
        <h1>Hello</h1>
        <h2>My name is Richard</h2>
    </div>
</section>

<style>
    svg {
        max-width: 60%;
        max-height: 50%;
    }

    h1 {
        margin-top: 30px;
        margin-bottom: 0;
        font-size: 8rem;
        text-align: center;
        line-height: 80%;
        color: var(--inverted-primary-color);
        @media only screen and ((min-width: 992px)) {
            font-size: 10rem;
            text-align: left;
        }
    }
    h2 {
        margin-top: 0;
        font-size: 1.9rem;
        text-align: center;
        @media only screen and ((min-width: 992px)) {
            font-size: 4rem;
            text-align: left;
            padding-left: 6px;
        }
    }
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100dvh;
        max-width: 100%;
        gap: 0px;
        @media only screen and ((min-width: 992px)) {
            display: flex;
            flex-direction: row;
            justify-content: center;
        }
    }

    rect {
        transition: fill 0.5s ease;
        fill: var(--inverted-primary-color);
        &:nth-child(odd) {
            animation: 1.5s ease-in-out infinite alternate pulse;
        }

        &:nth-child(even) {
            animation: 3s ease-in-out infinite alternate pulse;
            --pulse-scale-to: scale(85%);
        }
        &:hover {
            fill: white;
            transition: fill 0.5s ease;
        }
    }
    .text {
        display: flex;
        flex-direction: column;
        align-items: left;
        @media only screen and ((min-width: 992px)) {
            justify-content: stretch;
            margin-left: 50px;
        }
    }
</style>
